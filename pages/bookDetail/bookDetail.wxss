@import "../templates/bookInfo.wxss";
@import "../templates/bookList.wxss";

.container{
    display:flex;
    flex-direction: column;
    }

.head-img{
    width:100%;
    height: 320rpx;
    -webkit-filter:blur(20px);
}

.head-img-hover{
    width: 100%;
    height: 320rpx;
    position:absolute;
    top:0;
    left:0;
    display:flex;
    flex-direction: column;
}
.main-title{
    font-size: 19px;
    color:#fff;
    font-weight:bold;
    margin-top: 40rpx;
    margin-left: 300rpx;
    letter-spacing: 2px;
}

.sub-title{
    font-size: 28rpx;
    color:#fff;
    margin-left: 0rpx;
    margin-top: -40rpx;
    margin-bottom: -40rpx;
}
.book-img{
    height:238rpx;
    width: 175rpx;
    position: absolute;
    top:40rpx;
    left: 60rpx;
}

.summary{
    margin-left:40rpx;
    margin-top: 40rpx;
    color: #777777;
}
.flex-row{
    display:flex;
    margin-left: 300rpx;
    flex-direction: column;
    margin-bottom: 10rpx;
}

.mark{
    margin-right: 30rpx;
    white-space:nowrap;
    color: #fdc441;
}

.buttonMenu
{ 
    flex-direction: row;
    margin-left: 30rpx;
    color: #fdc441;
    margin-top: 30rpx;
}
.opts{
  width: 300rpx;
  font-size: 30rpx; 
  
}
/*储存信息表格 */
.table {
  border: 0px solid darkgray;
  font-size: 25rpx;
  margin-top: 20rpx;
}
.tr {
  display: flex;
  width: 95%;
  margin: auto;
  justify-content: center;
  
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #ffed97;
}
.th {
  width: 40%;
  justify-content: center;
  background: #fd8f26;
  color: #fff;
  display: flex;
  height: 40rpx;
  align-items: center;
}

/*导读*/
.guideRead{
 width: 90%;
 margin: auto;
 background: #fff;
 border-left: 1px solid black;
 border-right: 1px solid black;
 padding: 15rpx 25rpx 15rpx 25rpx;
 font-size: 25rpx;
 margin-bottom: 5rpx;
}

/*书籍信息*/
.bookInfo
{
 width: 90%;
 margin: auto;
 background: #fff;
 border-left: 1px solid black;
 border-right: 1px solid black;
 padding: 15rpx 25rpx 15rpx 25rpx;
 font-size: 25rpx;
 margin-bottom: 10rpx;
}
.bookList{
 width: 90%;
 margin: auto;
 border-top: 1px solid black;
 border-bottom: 1px solid black;
 padding: 15rpx 25rpx 15rpx 25rpx;
 font-size: 25rpx;
 margin-bottom: 5rpx;
}

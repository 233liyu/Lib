
<import src="../templates/bookInfo.wxml" />
<import src = "../templates/bookList.wxml"/>
<view class="search">
 <image src="/images/icon/search.png" class="Search_img" bindtap="onSearchTap"> </image>
 <form bindreset="cleanMessag">
 <input type="text" placeholder="请输入图书编号或者书名" placeholder-class="placeholder" bindfocus="onBindFocus" bindblur="onBindBlur" name="search"/>
 <button wx:if="{{searchCancel}}"  form-type="reset" bindtap="onCancelImgTap"  class="CancelBtn">取消</button>
</form>

</view>
<view class = "container" wx:if="{{containerShow}}">
<!-- 推荐模块 -->
<view class="Reco_BookInfo">
 <view class="ttt">
 <view class="ttt" style="overflow-x:hidden;">
  <image class="title_pic" src="../../images/icon/title.png"></image>
  <view class="little_title">
   向你推荐
  </view>
   <template is="bookListTemplate" data="{{...Command}}"></template>
    </view>
  </view>
<!-- end -->

 <!-- 图书分类 -->
  <view class="ttt">
  <image class="title_pic" src="../../images/icon/title.png"></image>
  <view class="little_title">
    图书分类
  </view>
  </view>
  <view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <view class="kind-list-item">
          <view id="{{item.id}}" class="kind-list-item-hd {{item.open ? 'kind-list-item-hd-show' : ''}}" bindtap="kindToggle">
            <view class="kind-list-text">{{item.name}}</view>
          </view>
          <view class="kind-list-item-bd {{item.open ? 'kind-list-item-bd-show' : ''}}">
            <view class="navigator-box {{item.open ? 'navigator-box-show' : ''}}">
              <block wx:for-items="{{item.pages}}" wx:for-item="page" wx:key="*item">
                <navigator url="../sortDetail/sortDetail?sid={{page.sid}}&&tt={{page.tt}}" class="navigator">
                  <view class="navigator-text">{{page.tt}}</view>
                  <view class="navigator-arrow"></view>
                </navigator>
              </block>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
 </view>
 <view class="searchPanel" wx:if="{{searchPanel}}">
 
 </view>
 </view>